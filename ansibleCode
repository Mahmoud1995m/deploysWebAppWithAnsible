---
- hosts: web
  become: yes
  tasks:
  - name: install git
    yum:
      name: git
      state: latest
  - name: install httpd
    yum: name=httpd state=latest
  - name: Enable service httpd, and not touch the state
    ansible.builtin.service:
      name: httpd
      enabled: yes
  - name: Git checkout
    git:
      repo: 'https://github.com/Mahmoud1995m/simpleWebApp.git'
      dest: /var/www/html/
